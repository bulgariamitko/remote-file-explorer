{
  "name": "remote-file-explorer",
  "version": "1.0.0",
  "description": "A dual-pane file explorer for local and remote file management",
  "main": "public/electron.js",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "chokidar": "^3.5.3",
    "electron-is-dev": "^2.0.0",
    "fs-extra": "^11.1.1",
    "lucide-react": "^0.263.1",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "ssh2": "^1.15.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "electron-icon-builder": "^2.0.1",
    "wait-on": "^7.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build"
  },
  "build": {
    "appId": "com.remote-file-explorer.app",
    "productName": "Remote File Explorer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "identity": null,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Remote File Explorer",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
